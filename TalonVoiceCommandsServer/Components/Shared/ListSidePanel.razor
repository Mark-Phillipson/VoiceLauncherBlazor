<div id="list-side-panel" class="list-side-panel @(IsOpen ? "open" : "closed")" role="dialog"
    aria-label="List values panel" tabindex="-1" @onkeydown="HandleKeyDown">
    <div class="panel-header d-flex justify-content-between align-items-center p-2 border-bottom">
        <strong class="list-panel-title">@(SelectedListName ?? "")</strong>
        <div>
            <button class="btn btn-sm btn-outline-secondary me-2" @onclick="OnCopy">Copy</button>
            <button class="btn btn-sm btn-outline-danger" @onclick="Close">Close</button>
        </div>
    </div>
    <div class="panel-body p-2 list-panel-body">
            @if (IsLoading && (Values == null || Values.Count == 0))
            {
                @* <div class="d-flex justify-content-center align-items-center" style="height:120px">
                    <div class="spinner-border text-primary" role="status" aria-hidden="true"></div>
                </div> *@
            }

            @if (!IsLoading && (Values == null || Values.Count == 0))
            {
                <p class="text-muted no-list-items">
                    No items found for this list. It may be a Talon "capture" (a dynamic capture) rather than a stored list â€” check the Talon command source or capture definitions.
                </p>
            }

            <div class="mb-2">
                <!-- Prevent Enter from submitting parent forms: handle onkeydown in-page -->
                <input type="text" class="form-control" placeholder="Filter items..." @bind="FilterTerm" @bind:event="oninput" aria-label="Filter items" onkeydown="if(event.key==='Enter'){event.preventDefault(); event.stopPropagation(); return false;}" />
            </div>

            <div class="values-container table-scroll">
                <table class="table table-sm table-striped mb-0 table-scroll-table">
                    <thead>
                        <tr>
                            <th>Spoken Form</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (FilteredValues != null && FilteredValues.Count > 0)
                        {
                            foreach (var v in FilteredValues)
                            {
                                <tr>
                                    <td class="font-monospace">@v.SpokenForm</td>
                                    <td class="font-monospace">@v.ListValue</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
