@namespace TalonVoiceCommandsServer.Components.Pages
@inherits TalonVoiceCommandsServer.Components.Pages.TalonVoiceCommandAnalysisBase

<div class="analysis-report p-3">
    <h3>Talon Voice Command Analysis</h3>

    <div class="card mt-3">
        <div class="card-body d-flex justify-content-between">
            <div>
                <i class="oi oi-list-rich me-2"></i>
                <strong>@CommandsCount</strong>
                <div class="text-muted">Commands</div>
            </div>
            <div>
                <i class="oi oi-list-rich me-2"></i>
                <strong>@ListsCount</strong>
                <div class="text-muted">Lists</div>
            </div>
            <div>
                <i class="oi oi-folder me-2"></i>
                <strong>@RepositoriesCount</strong>
                <div class="text-muted">Repositories</div>
            </div>
        </div>
    </div>

    <div class="mt-3 text-muted">Last refresh: @LastRefresh</div>

    <div class="mt-3">
        <button class="btn btn-primary" @onclick="Refresh">Refresh</button>
    </div>

    @if (Repositories?.Any() == true)
    {
        <div class="card mt-4">
            <div class="card-header">
                <strong>Repository Breakdown</strong>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-striped mb-0">
                        <thead>
                            <tr>
                                <th>Repository</th>
                                <th class="text-end">Commands</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in Repositories)
                            {
                                <tr>
                                    <td>@r.Repository</td>
                                    <td class="text-end">@r.Count</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (ListsCount > 0 || TotalListItems > 0)
    {
        <div class="card mt-4">
            <div class="card-header">
                <strong>Lists Breakdown</strong>
            </div>
            <div class="card-body">
                <div class="d-flex gap-4 mb-3">
                    <div>
                        <div class="text-muted">Total Lists</div>
                        <strong>@ListsCount</strong>
                    </div>
                    <div>
                        <div class="text-muted">Total List Items</div>
                        <strong>@TotalListItems</strong>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (TopApplications?.Any() == true)
    {
        <div class="card mt-4">
            <div class="card-header">
                <strong>Top Applications</strong>
            </div>
            <div class="card-body">
                <ol>
                    @foreach (var a in TopApplications)
                    {
                        <li>@a.Application â€” @a.Count</li>
                    }
                </ol>
            </div>
        </div>
    }
</div>
