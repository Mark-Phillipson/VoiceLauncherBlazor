@page "/languages"

@using VoiceLauncherBlazor.Data
@using VoiceLauncherBlazor.Models
@inject VoiceLauncherService VoiceLauncherService
@inject NavigationManager NavigationManager

<h3>
    List of Languages
    @if (StatusMessage != null)
    {
        <small class="text-danger"> Last Action: @StatusMessage</small>
    }
    @if (SearchTerm != null)
    {
        <small class="text-warning"> Filter: @SearchTerm</small>
    }
</h3>

<div class="form-field row">
    <a accesskey="0" class="btn btn-sm btn-success col-md-2" href="/language/0">Create (0) <i class="oi oi-plus"></i></a>
    <label class="control-label col-md-1">Filter</label>
    <input @bind="SearchTerm" @bind:event="oninput" class="form-control col-md-5" accesskey="1" placeholder="Type to Filter, Use Press Commands to trigger (1)" />
    <button accesskey="2" class="btn btn-sm btn-primary col-md-2" type="button" @onclick="ApplyFilter">Filter (2) <i class="oi oi-magnifying-glass"></i></button>
</div>
@if (languages == null)
{
    <p><em>Loading...</em></p>
}
else if (languages.Count == 0)
{
    <text>No languages found</text> }
else
{
    <table class="table table-dark table-bordered table-striped" id="table1">
        <thead>
            <tr>
                <th>
                    Language Name
                    <button @onclick="@(e  => SortLanguages("LanguageName","Ascending"))" accesskey="3" class="btn btn-sm btn-info">(3) <i class="oi oi-sort-ascending"></i></button>
                    <button @onclick="@(e => SortLanguages("LanguageName","Descending"))" accesskey="4" class="btn btn-sm btn-info">(4) <i class="oi oi-sort-descending"></i></button>
                </th>
                <th style="width: 350px">
                    <div class="row">
                        <div class="col-md-3">Active</div>
                        <button @onclick="@(e => ShowAll())" accesskey="5" class="btn btn-sm btn-info col-md-4">Show All (5) <i class="oi oi-eye"></i></button>
                        <input type="checkbox" accesskey="1" class="form-control-sm col-md-5" style="width: 150px" @bind="activeFilter" @onblur="FilterActive" />
                    </div>
                </th>
                <th>
                    IntelliSense
                </th>
                <th>
                    <button accesskey="6" class="btn btn-sm btn-success" @onclick="SaveAllLanguages">Save All (6) <i class="oi oi-hard-drive"></i></button>
                </th>
            </tr>
        </thead>
        <tbody>
            @{ var counter = 5;}
            @foreach (var language in languages)
            {
                counter++;
                <tr>
                    <td>
                        <input class="form-control" @bind="language.LanguageName" />
                    </td>
                    <td>
                        <input type="checkbox" class="form-control" @bind="language.Active" />
                    </td>
                    <td>
                        @if (language.CustomIntelliSense!= null )
                        {
                            @language.CustomIntelliSense.Count
                        }
                    </td>
                    <td>
                        @*<a accesskey="@(counter< 10 ? counter.ToString():"")" class="btn btn-sm btn-success" href="/language/@language.Id">Edit @(counter< 10 ? "(" + counter.ToString() + ")" : "") <i class="oi oi-pencil"></i></a>*@
                        <button accesskey="@(counter< 10 ? counter.ToString():"")" class="btn btn-sm btn-danger" @onclick="@(() => ConfirmDelete(language.Id))">Delete @(counter< 10 ? "(" +  counter.ToString() + ")":"") <i class="oi oi-circle-x"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<TemplatedDialog Show="ShowDialog">
    <ConfirmDialog Message="Please confirm you wish to Delete this Language!"
                   Title="Confirmation Required"
                   OnCancel="CancelDelete" OnConfirm="@(() => DeleteLanguage(languageIdDelete))">
    </ConfirmDialog>
</TemplatedDialog>

@code {
    public bool ShowDialog { get; set; }
    private int languageIdDelete { get; set; }
    private List<VoiceLauncherBlazor.Models.Language> languages;
    public string StatusMessage { get; set; }
    //public List<VoiceLauncherBlazor.Models.GeneralLookup> generalLookups { get; set; }
    private bool? activeFilter { get; set; } = null;
    private string searchTerm;
    public string SearchTerm
    {
        get => searchTerm;
        set
        {
            if (searchTerm != value)
            {
                searchTerm = value;
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        languages= await VoiceLauncherService.GetLanguagesAsync();
    }

    async Task ApplyFilter()
    {
        if (SearchTerm != null)
        {
            languages = await VoiceLauncherService.GetLanguagesAsync(SearchTerm.Trim());
            StateHasChanged();
        }
    }

    //void HandleValidSubmit()
    //{
    //    Console.WriteLine("OnValidSubmit");
    //}
    void ConfirmDelete(int languageId)
    {
        ShowDialog = true;
        languageIdDelete = languageId;
    }
    void CancelDelete()
    {
        ShowDialog = false;
    }
    async Task SortLanguages(string column, string sortType)
    {
        languages = await VoiceLauncherService.GetLanguagesAsync("", column, sortType);
    }
    async Task DeleteLanguage(int languageId)
    {
        var result = await VoiceLauncherService.DeleteLanguage(languageId);
        StatusMessage = result;
        ShowDialog = false;
        languages = await VoiceLauncherService.GetLanguagesAsync();
    }
    async Task FilterActive()
    {
        languages = await VoiceLauncherService.GetLanguagesAsync(null, null, null, activeFilter);
    }
    async Task SaveAllLanguages()
    {
        languages = await VoiceLauncherService.SaveAllLanguages(languages);
        StatusMessage = $"Languages Successfully Saved {DateTime.UtcNow:h:mm:ss tt zz}";
    }
    async Task ShowAll()
    {
        activeFilter = null;
        await FilterActive();
    }
}
