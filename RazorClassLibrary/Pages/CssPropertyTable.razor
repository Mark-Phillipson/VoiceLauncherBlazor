@page "/cssproperties"
<div class="row">
<div class="col-md-12">
    </div>
<div class="col-md-3">
<h5 class="m-1">@Title of @totalRows Page: @pageNumber</h5>
</div>
@if (_serverPaging) {
<div class="col-md-4">
    <button title="Go to 1st page" type="button"
        class="btn btn-sm btn-outline-secondary mx-1"
        @onclick="@(()  => PageDown(true))">
        <i class="bi bi-skip-backward-fill"></i>
    </button>
    <button title="Go to previous page" type="button"
        class="btn btn-sm btn-outline-secondary mx-1"
        @onclick="(()  => PageDown(false))">
        <i class="bi bi-caret-left-fill"></i>
    </button>
    <button title="Go to next page" type="button"
        class="btn btn-sm btn-outline-secondary mx-1"
        @onclick="(() => PageUp(false)) ">
        <i class="bi bi-caret-right-fill"></i>
    </button>
    <button title="Go to last page" type="button"
        class="btn btn-sm btn-outline-secondary mx-1"
        @onclick="(()  => PageUp(true))">
        <i class="bi bi-skip-forward-fill"></i>
    </button>
</div>
}
            @if (_serverPaging) {
            <div class="col-md-4">
                <input @ref="SearchInput" accesskey="i"
                    class="form-control my-1"
                    style="float:right"
                    @bind="@SearchTerm"
                    @bind:event="oninput"
                    id="SearchInput" name="SearchTerm"
                    placeholder="Filter by Property Name/Description (Alt+I)" />
            </div>
            } else {
                <div class="col-md-3">
                    <input class="form-control my-1" style="float:right" @bind="@ClientSearchTerm" id="ClientSearchInput"
                        name="ClientSearchTerm" @bind:event="oninput" placeholder="Filter by Property Name/Description>" />
                </div>
            }
    </div>
    @if (FilteredCssPropertyDTO == null && _loadFailed == true)
        {
        <h2 class="text-danger">The data failed to load
            please try again in a little while..</h2>
        <button class="btn btn-danger" type="button"
        @onclick="@( () => LoadData() )">Reload</button>
        <h6 class="text-danger">@ExceptionMessage</h6>
    }
    else if (FilteredCssPropertyDTO == null)
            {
            <div style="display:normal;margin:auto"
                class="loader"></div>
            }
    else if (FilteredCssPropertyDTO.Count ==
        0)
        {
        <p>No Css Property match the
                criteria</p>
        <button @onclick="AddNewCssProperty"
            class="btn btn-outline-primary  btn-lg">Add
            Record <i
                class="bi bi-plus-square"></i></button>
        }
    else
    {
    <table style="font-size:small"
        class="table table-bordered table-striped table-sm table-responsive-sm">
        <thead>
            <tr>
                                                                <th>
                                Id
                            </th>
                                                                        <th>
                            <button class="btn btn-sm"
                                @onclick="@(() => SortCssProperty("PropertyName"))">
                                <i class="bi bi-sort-alpha-up"></i>
                            </button>
                            <button class="btn btn-sm"
                                @onclick="@(() => SortCssProperty("PropertyName Desc"))">
                                <i class="bi bi-sort-alpha-up-alt"></i>
                            </button>
                            Property Name
                        </th>
                                                                        <th>
                                Description
                            </th>
                                                        <th>
                              <button accesskey="+"
                                    @onclick="AddNewCssProperty" class="btn btn-outline-success btn-sm">
                                    Create
                                    <i class="bi bi-plus-square"></i>
                              </button>
                            </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var
                    cssProperty in
                        FilteredCssPropertyDTO)
                            {
                            <tr>
                                                                    <td style="cursor:pointer" @onclick="@(() => EditCssProperty(cssProperty.Id))">
    <button class="btn btn-sm btn-link">
        @cssProperty.Id
    </button>
</td>
                                        <td>
        @cssProperty.PropertyName
    </td>
                                            <td>
        @cssProperty.Description
    </td>
            <td class="btn-group-vertical">
            <button class="btn btn-sm btn-outline-warning"
                @onclick="@(() => EditCssProperty(cssProperty.Id))">
                Edit
                <i class="bi bi-pencil-square"></i>
            </button>
            <button class="btn btn-sm btn-outline-danger"
                @onclick="@(() => DeleteCssProperty(cssProperty.Id))">
                Delete
                <i class="bi bi-trash"></i>
            </button>
        </td>
            </tr>
            }
        </tbody>
    </table>
}
