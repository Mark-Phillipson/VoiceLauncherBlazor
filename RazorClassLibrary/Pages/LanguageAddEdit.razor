@page "/language/{Id:int?}"
@using SmartComponents
<div style="min-width:80vw">
    <h1>@Title</h1>
    <EditForm Model="@LanguageDTO" OnValidSubmit="HandleValidSubmit">
        <DataAnnotationsValidator />
        @*<ValidationSummary />*@
        @if (LanguageDTO.Id > 0)
        {
            <span class="text-info m-1">@LanguageDTO.Id</span>
        }
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <label for="Language">Language:</label> <i class="text-danger fa">*</i>
                    <InputText id="Language" class="form-control" @bind-Value="@LanguageDTO.LanguageName"
                        placeholder="Enter Language"></InputText>
                    <ValidationMessage For="@(() => LanguageDTO.LanguageName)" />
                </div>
                <div class="form-group">
                    <label for="Active">Active: </label>
                    <InputCheckbox id="Active" class="form-checkbox" @bind-Value="@LanguageDTO.Active">
                    </InputCheckbox>
                    <ValidationMessage For="@(() => LanguageDTO.Active)" />
                </div>
                <div class="form-group">
                    <label for="Colour">Colour:</label>
                    <InputText id="Colour" class="form-control" @bind-Value="@LanguageDTO.Colour"
                        placeholder="Enter Colour"></InputText>
                    <ValidationMessage For="@(() => LanguageDTO.Colour)" />
                </div>
                <div class="form-group">
                    <label for="ImageLink">Image File Name:</label>
                    <InputText id="ImageLink" class="form-control" @bind-Value="@LanguageDTO.ImageLink"
                        placeholder="Enter image file name (e.g. language.png)"></InputText>
                    <ValidationMessage For="@(() => LanguageDTO.ImageLink)" />
                </div>
            </div>
            <div class="col-12">
                @* Move here for the next display column if required *@
            </div>
        </div>
        <hr>
        <div class="" style="float:right">
            <a class="btn btn-outline-secondary" href="/languages">Back to Languages Table</a>
            <a accesskey="c" class="btn btn-lg btn-outline-primary" @onclick="@CloseAsync"><u>C</u>ancel</a>
            <button @TaskRunning accesskey="s" type="submit" class="btn btn-lg btn-primary"><u>S</u>ave Record</button>
            <SmartPasteButton accesskey='p' class='btn btn-lg btn-outline-danger' DefaultIcon>Smart <u>P</u>asty
            </SmartPasteButton>
        </div>
    </EditForm>
</div>
