@page "/"
@using System.Diagnostics;
@using RazorClassLibrary.Pages
<CascadingBlazoredModal>
	@if (languageAndCategoryListing) // filtering by language and category and listing only ten at a time with paging sported
	{
		<CustomIntelliSenseTable CategoryId="@categoryId" LanguageId="@languageId" RunningInBlazorHybrid="true"  CloseApplication="CloseWindow" />
	}
	else // filtering by display value mostly
	{
		<CustomIntelliSenses CategoryIdFilter="@categoryId" LanguageIdFilter="@languageId" RunningInBlazorHybrid="true" SearchTermParameter="@searchTerm"  CloseApplication="CloseWindow"/>
	}
</CascadingBlazoredModal>
