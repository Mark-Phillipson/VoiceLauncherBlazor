@inject VoiceLauncherWasm.Services.IndexedDB.IIndexedDBService IndexedDBService
@inject IJSRuntime JS

@code {
    private bool _initialized;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_initialized)
        {
            _initialized = true;
            try
            {
                await IndexedDBService.InitializeAsync();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"IndexedDB initialization failed: {ex}");
                // Surface the error in the browser console
                await JS.InvokeVoidAsync("console.error", "IndexedDB initialization failed:", ex?.ToString());
                throw;
            }
        }
    }
}
