@page "/todos"
@inject ITodoData TodoData
@inject IJSRuntime JSRuntime
@if (Project == null)
{

	<header>
		<div class="row">
			<div class="col-1">
				<h5>Todos</h5>
			</div>
			<div class="col-3">

				<input placeholder="Filter by title/description (Alt+1)" class="form-control form-control-sm" accesskey="1" @bind-value="SearchTerm" @oninput="@(() => CallChangeAsync("SearchInput"))" id="SearchInput" />
			</div>
			<div class="col-8">
				@if (Project == null)
				{
					<div class="layout-as-cards">
						@if (ShowProjects)
						{
							<button class="btn btn-success btn-sm" type="button" @onclick="@( ( ) => ToggleShowProjects(  ) )">
								Hide Projects <i class="fa-regular fa-eye-slash"></i>
							</button>
							@foreach (var item in Projects)
							{
								<button class="btn btn-sm btn-outline-dark" @onclick="@(() => FilterByProjectAsync( item ))">
									<span class="text-danger">@item</span>
								</button>
							}
						}
						else
						{
							<button class="btn btn-success btn-sm" type="button" @onclick="@( ( ) => ToggleShowProjects(  ) )">
								Show Projects <i class="fa-regular fa-eye"></i>
							</button>
						}
						@if (ProjectFilter != null)
						{
							<button class="btn btn-outline-success btn-sm" type="button" @onclick="@( ( ) => ShowAll(  ) )">Show All</button>
						}
					</div>
				}
			</div>

		</div>
		@if (StatusMessage != null)
		{
			@*			<Alert Title="Last Action:" Display="@StatusMessage" Show="true" Duration="6000" />*@
		}
	</header>
	<a class="btn btn-sm btn-outline-primary" href="/tasksbreakdown">Tasks Breakdown</a>
	<button class="btn btn-outline-success btn-sm" type="button" @onclick="@( ( ) => ArchiveCompleted(  ) )">Archive Completed</button>
	<EditTodos Todo="todo" Save="InsertTodo" Cancel="CancelEdit" />

	<h4>Current Todos</h4>
}
@if (LoadFailed)
{
	<div class="text-danger">The data failed to load please try again later!</div>
}
else if (todos == null)
{
	<Loading />
}
else
{
	@if (todos.Count > 0)
	{
		<div class="progress my-2">
			<div class="progress-bar" role="progressbar" style="width:@(PercentDone)%" aria-valuemin="0" aria-valuemax="100">
				@(PercentDone)%
			</div>
		</div>
	}

	<table class="table table-bordered table-striped table-responsive table-sm" id="table1">
		<thead>
			<tr>
				<th>Priority</th>
				<th>Title</th>
				<th>Description</th>
				<th>Done</th>
				@if (Project == null)
				{
					<th>Project</th>
					<th>Action</th>
				}
			</tr>
		</thead>
		<tbody>
			@foreach (var todo in todos)
			{
				<tr>
					@if (todo.Completed != true)
					{
						<td>
							<div class="btn-group">
								<button class="btn btn-outline-danger btn-lg" type="button" @onclick="@( ( ) =>
									SetPriorityAsync( todo.Id,true ) )">
									<i class="oi oi-arrow-circle-top"></i>
								</button>
								<button class="btn btn-outline-info btn-lg" type="button" @onclick="@( ( ) =>
									SetPriorityAsync( todo.Id,false ) )">
									<i class="oi oi-arrow-circle-bottom"></i>
								</button>
							</div>
						</td>
						<td>
							@todo.Title
						</td>
						<td>@todo.Description</td>
						<td>
							<button class="btn btn-lg btn-outline-success" type="button" @onclick="@(() => ChangeCompleted(todo.Id,true))">
								<img src="/images/ToDo.png" width="25" />
							</button>
						</td>
					}
					else
					{
						<td></td>
						<td class="text-muted">
							<del>@todo.Title</del>
						</td>
						<td class="text-muted"><del>@todo.Description</del></td>
						<td>
							<button class="btn btn-lg btn-success" type="button" @onclick="@(() => ChangeCompleted(todo.Id,false))">
								☑️
							</button>
						</td>
					}
					@if (Project == null)
					{
						<td>@todo.Project</td>
						<td class="btn-group">
							<button class="btn btn-outline-warning btn-lg" type="button" @onclick="() => EditTodo(todo)"><i class="oi oi-pencil"></i></button>
							<button class="btn btn-outline-danger btn-lg" type="button" @onclick="() => ConfirmDeleteAsync(todo.Id)"><i class="oi oi-delete"></i></button>
							@if (todo.Completed)
							{
								<button class="btn btn-primary btn-lg" type="button" @onclick="() => ConfirmArchive(todo.Id)">Archive</button>
							}
						</td>
					}
				</tr>
			}
		</tbody>
	</table>

}
<TemplatedDialog Show="ShowDialog" PageYOffset="@PageYOffset">
	<ConfirmDialog Message="Please confirm you wish to Delete this Todo!"
						Title="Confirmation Required"
						OnCancel="CancelDialog" OnConfirm="@(() => DeleteTodo(TodoIdDelete))">
	</ConfirmDialog>
</TemplatedDialog>
<TemplatedDialog Show="ShowDialogArchive">
	<ConfirmDialog Message="Please confirm you wish to archive the current to do item!"
						Title="Confirmation Required"
						OnCancel="CancelDialog" OnConfirm="@(() => ArchiveTodo(TodoIdArchive))">
	</ConfirmDialog>
</TemplatedDialog>

