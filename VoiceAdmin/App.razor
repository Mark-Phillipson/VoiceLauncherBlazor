<CascadingBlazoredModal Class="blazored-modal-custom">

    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" DefaultLayout="@typeof(RazorClassLibrary.Shared.MainLayout)" />
            @* <FocusOnNavigate RouteData="@routeData" Selector="textarea" /> *@
        </Found>
        <NotFound>
            <PageTitle>Not found</PageTitle>
            <LayoutView Layout="@typeof(RazorClassLibrary.Shared.MainLayout)">
                <p role="alert">Sorry, there's nothing at this address.</p>
            </LayoutView>
        </NotFound>
    </Router>

</CascadingBlazoredModal>
